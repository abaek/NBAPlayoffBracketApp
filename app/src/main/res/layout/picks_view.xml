<com.example.andy.nbaplayoffbracket.PicksView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/gutter_full"
    android:paddingTop="@dimen/gutter_full"
    android:paddingLeft="@dimen/gutter_full"
    android:paddingRight="@dimen/gutter_full"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/gutter_half"
        android:paddingTop="@dimen/gutter_half"
        android:paddingLeft="@dimen/gutter_half"
        android:paddingRight="@dimen/gutter_half"
        android:layout_gravity="center"
        card_view:cardCornerRadius="4dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hello!"/>

    </android.support.v7.widget.CardView>

</com.example.andy.nbaplayoffbracket.PicksView>
